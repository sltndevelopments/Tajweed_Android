<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_24dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/font_settings_seek_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/font_settings_seek_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lesson_font_settings_size"
        android:textAllCaps="true"
        android:textColor="@color/warm_grey"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ru.tajwid.app.ui.view.DottedSeekBar
        android:id="@+id/font_settings_seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/font_settings_seek_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>