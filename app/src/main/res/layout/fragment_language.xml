<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/FullScreenDialogStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Выбор языка" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RadioButton

                android:layout_width="174dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:text="Русский"
                android:drawableRight="@drawable/ic_rus_48"/>

            <RadioButton

                android:layout_width="174dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:text="Турецкий"
                android:drawableRight="@drawable/ic_tr_48"/>

            <RadioButton

                android:layout_width="174dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:text="США"
                android:drawableRight="@drawable/ic_en_48"/>
            </RadioGroup>

        </LinearLayout>


</LinearLayout>