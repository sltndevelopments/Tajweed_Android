<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/default_background"
              android:orientation="vertical">

    <TextView
        android:id="@+id/exercise_writing_example_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:gravity="center"
        android:textColor="@color/greyish_brown"
        android:textSize="@dimen/text_size_20sp"
        android:textStyle="normal"
        tools:text="Напишите арабскими буквами"/>

    <TextView
        android:id="@+id/exercise_writing_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dimen_48dp"
        android:textColor="@color/blueberry"
        android:textSize="@dimen/text_size_48sp"
        android:textStyle="normal"
        tools:text="أَمَرَ"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exercise_writing_example_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@null"
            android:src="@drawable/ic_go_to_lesson"/>

        <TextView
            android:id="@+id/exercise_writing_example_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:gravity="center"
            android:text="@string/onward"
            android:textAllCaps="true"
            android:textColor="@color/warm_grey"
            android:textSize="@dimen/text_size_12sp"/>
    </LinearLayout>
</LinearLayout>