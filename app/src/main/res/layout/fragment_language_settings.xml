<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/FullScreenDialogStyle">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/language_settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppToolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:background="@color/default_separator" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_8dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Выбор языка" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_8dp">

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawableRight="@drawable/ic_rus_48"
                android:text="Русский" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:drawableRight="@drawable/ic_tr_48"
                android:text="Турецкий" />

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:drawableRight="@drawable/ic_en_48"
                android:text="США" />


        </RadioGroup>

    </LinearLayout>


</LinearLayout>