<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_next_medium"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        app:layout_constraintEnd_toStartOf="@id/week_day"
        app:fontFamily="@font/avenir_next_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="17:00-18:00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_next_medium"
        android:textColor="@color/black"
        android:gravity="end"
        android:textSize="20sp"
        android:maxWidth="200dp"
        app:layout_constraintBottom_toTopOf="@id/price"
        app:fontFamily="@font/avenir_next_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Вторник" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:fontFamily="@font/avenir_next_regular"
        android:gravity="end"
        android:maxWidth="200dp"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:visibility="gone"
        app:fontFamily="@font/avenir_next_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/week_day"
        tools:text="600 руб/урок"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/teacher"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:includeFontPadding="false"
        tools:text="Устаз: Абдуллах хазрат"
        android:layout_marginEnd="@dimen/dimen_8dp"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintEnd_toStartOf="@id/price" />


</androidx.constraintlayout.widget.ConstraintLayout>