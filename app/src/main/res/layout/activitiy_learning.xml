<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/learning_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_4dp"
        android:theme="@style/AppToolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="С учителем">

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="58dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="600dp"
            android:gravity="left|center"
            android:text="Группы"
            android:textColor="@color/black_text"
            android:textSize="21sp" />

        <RadioGroup
            android:id="@+id/radio_group_1"
            android:layout_width="317dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@drawable/costom_radiobutton"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="Мужская"
                android:textColor="@color/black_text" />

            <RadioButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/costom_radiobutton"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="Женская"
                android:textColor="@color/black_text" />

            <RadioButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/costom_radiobutton"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="Детская"
                android:textColor="@color/black_text" />


        </RadioGroup>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="141dp"
            android:layout_marginBottom="511dp"
            android:gravity="left|center"
            android:text="Время занятий"
            android:textColor="@color/black_text"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="370dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="310dp"
            android:layout_marginBottom="371dp"
            android:background="@color/default_separator" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="110dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="41dp"
            android:layout_height="41dp"
            app:srcCompat="@drawable/ic_onlineuser" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:text="Войти в класс"
            android:textColor="@color/black_text"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="210dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="371dp"
        android:background="@color/default_separator" />

</RelativeLayout>