<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="600dp"
            android:gravity="center"
            android:text="С учителем"
            android:textColor="@color/black_text"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="600dp"
            android:gravity="left|center"
            android:text="Группы"
            android:textColor="@color/black_text"
            android:textSize="21sp" />

        <RadioGroup
            android:id="@+id/radio_group_1"
            android:layout_width="317dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/costom_radiobutton"
                android:button="@null"
                android:checked="true"
                android:text="Мужская"
                android:gravity="center"
                android:textColor="@color/black_text"
                android:layout_marginRight="6dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/costom_radiobutton"
                android:button="@null"
                android:checked="true"
                android:text="Женская"
                android:textColor="@color/black_text"
                android:gravity="center"
                android:layout_weight="1"  />

            <RadioButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/costom_radiobutton"
                android:button="@null"
                android:checked="true"
                android:text="Детская"
                android:textColor="@color/black_text"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:layout_weight="1"  />


        </RadioGroup>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="600dp"
            android:gravity="left|center"
            android:text="Время занятий"
            android:textColor="@color/black_text"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="370dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/myRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="370dp"
            android:layout_marginBottom="371dp"
            android:background="@color/default_separator" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="450dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="110dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="41dp"
            android:layout_height="41dp"
            app:srcCompat="@drawable/ic_onlineuser" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:textColor="@color/black_text"
            android:text="Войти в класс"
            android:textSize="21sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="210dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="371dp"
        android:background="@color/default_separator" />

</RelativeLayout>