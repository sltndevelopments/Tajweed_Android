<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/learning_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_4dp"
        android:theme="@style/AppToolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/title_with_teacher">

    </androidx.appcompat.widget.Toolbar>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swipe_refresh"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/learning_toolbar">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/groups_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_32dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:layout_marginEnd="@dimen/dimen_32dp"
                    android:text="@string/text_groups"
                    android:textColor="@color/black_text"
                    android:textSize="21sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:id="@+id/radio_group_1"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    app:layout_constraintTop_toBottomOf="@id/groups_title"
                    app:tabBackground="@drawable/costom_radiobutton"
                    app:tabGravity="center"
                    app:tabIndicator="@color/white_text"
                    app:tabMinWidth="96dp"
                    app:tabMode="auto"
                    app:tabPadding="@dimen/dimen_4dp"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextAppearance="@style/TabTextAppearance"
                    app:tabTextColor="#9000" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="@dimen/dimen_32dp"
                    android:layout_marginEnd="@dimen/dimen_32dp"
                    android:text="@string/text_lessons_time"
                    android:textColor="@color/black_text"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/radio_group_1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginStart="@dimen/dimen_32dp"
                    android:layout_marginEnd="@dimen/dimen_32dp"
                    android:nestedScrollingEnabled="false"
                    android:isScrollContainer="false"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/time" />

                <LinearLayout
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/goToClass"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_16dp"
                    android:paddingBottom="@dimen/dimen_16dp"
                    android:layout_marginStart="@dimen/dimen_32dp"
                    android:layout_marginEnd="@dimen/dimen_32dp"
                    app:layout_constraintTop_toBottomOf="@id/recycler_list">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        app:srcCompat="@drawable/ic_onlineuser" />

                    <TextView
                        android:drawablePadding="@dimen/dimen_4dp"
                        android:includeFontPadding="false"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:gravity="center"
                        android:text="@string/bottonClass"
                        android:textColor="@color/black_text"
                        android:textSize="21sp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="12dp"
                        android:scaleType="fitXY"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>