<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_three"
    android:orientation="vertical"
    tools:context="ru.tajwid.app.ui.activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_4dp"
        android:theme="@style/AppToolbar"
        app:title="@string/settings" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:background="@color/default_separator" />

    <LinearLayout
        android:id="@+id/settings_notice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_four"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/costom_ic_notification"
            android:checked="true" />

        <TextView
            android:id="@+id/settings_notice_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:text="@string/settings_notice_info"
            android:textSize="@dimen/text_size_16sp"
            tools:ignore="InefficientWeight" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/settings_switch"
            style="@style/AppSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:checked="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:background="@color/default_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_four">

        <ImageView
            android:id="@+id/languages_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/costom_ic_language"
            android:checked="true" />
        <TextView
            android:id="@+id/settings_languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:text="Выбор языка"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:background="@color/default_separator" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@color/white_four">

        <ImageView
            android:id="@+id/contact_author_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/costom_ic_contact_author"
            android:checked="true" />

        <TextView
            android:id="@+id/settings_communication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:text="@string/settigs_communication"
            android:textSize="@dimen/text_size_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:background="@color/default_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_four">

        <ImageView
            android:id="@+id/contact_about_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/costom_ic_about_project"
            android:checked="true" />


        <TextView
            android:id="@+id/settings_about_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:text="@string/settings_about_project"
            android:textSize="@dimen/text_size_16sp"
            tools:ignore="NestedWeights" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:background="@color/default_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@color/white_four">

        <ImageView
            android:id="@+id/star_rate_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/costom_ic_star_rate"
            android:checked="true" />


        <TextView
            android:id="@+id/settings_assessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:text="@string/settings_assessment"
            android:textSize="@dimen/text_size_16sp"
            tools:ignore="InefficientWeight" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:background="@color/default_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_four">

        <ImageView
            android:id="@+id/recommend_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/costom_ic_recommend"
            android:checked="true" />

        <TextView
            android:id="@+id/settings_recommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:text="@string/settings_recommendation"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@color/default_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_four">

        <ImageView
            android:id="@+id/privacy_policy_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/costom_ic_privacy_policy"
            android:checked="true" />

        <TextView
            android:id="@+id/secure_confidentiality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:text="@string/secure_confidentiality"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:background="@color/default_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_four">

        <ImageView
            android:id="@+id/terms_use_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/costom_ic_terms_use"
            android:checked="true" />

        <TextView
            android:id="@+id/user_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:text="@string/user_information"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

</LinearLayout>